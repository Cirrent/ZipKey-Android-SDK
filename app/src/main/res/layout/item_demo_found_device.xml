<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:saveEnabled="true"
    app:theme="@style/AlertDialog.AppCompat.Light"
    tools:ignore="MissingPrefix,ContentDescription">

    <RelativeLayout
        android:id="@+id/layout_demo_found"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:background="@drawable/shape_gray_stroke">

        <TextView
            android:id="@+id/text_id_device"
            fontPath="fonts/montserrat_regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp"
            android:saveEnabled="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_13"
            tools:text="Raspberry PI" />

        <ImageView
            android:id="@+id/icon_help"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_info_gray" />

        <View
            android:id="@+id/divider_item_managed"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text_id_device"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="12dp"
            android:background="@color/light_gray" />

        <ImageView
            android:id="@+id/img_device"
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:layout_below="@+id/divider_item_managed"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:scaleType="centerInside"
            tools:src="@drawable/camera_1" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left|start"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/is_checked"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:clickable="false"
            android:saveEnabled="true"
            android:src="@drawable/selector_founded_device_checkmark" />

        <TextView
            android:id="@+id/is_checked_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:clickable="false"
            android:saveEnabled="true"
            android:text="@string/product_selected"
            android:textColor="@color/selector_dark_gray_yellow"
            android:textSize="@dimen/text_13" />

    </LinearLayout>

</FrameLayout>
